{
  "web-ui": {
    "dependencies": [
      "daisyui",
      "react-spring",
      "framer-motion",
      "react-dropzone",
      "react-icons",
      "react-hook-form"
    ],
    "resources": [{ "src": "web/tailwind" }]
  },
  "auth": {
    "dependencies": ["next-auth"]
  },
  "database": {
    "dependencies": ["@supabase/supabase-js", "@prisma/client"],
    "devDependencies": ["supabase", "prisma", "encoding"],
    "resources": [{ "src": "web/supabase", "dest": "supabase" }],
    "scripts": {
      "update-supatypes": "supabase gen types typescript --schema public > supabase/types.ts"
    }
  },
  "pwa": {
    "dependencies": ["next-pwa", "@vercel/analytics"],
    "devDependencies": ["vercel"],
    "resources": [],
    "postinstalls": [
      "next telemetry disable",
      "npx icon-gen --input public/icon.svg --output public --favicon --favicon-png-sizes 1024"
    ],
    "scripts": {
      "deploy": "vercel --prod"
    }
  },
  "capacitor": {
    "dependencies": [
      "@capacitor/core",
      "@capacitor/android",
      "@capacitor/ios",
      "@capacitor-community/electron",
      "@capacitor-community/tauri@latest"
    ],
    "devDependencies": ["@capacitor/cli", "@capacitor/assets"],
    "resources": [{ "src": "web/capacitor", "dest": "" }],
    "postinstalls": [
      "npx cap init && npx cap add android && npx cap add ios && npx cap add @capacitor-community/electron && npx cap add @capacitor-community/tauri && npx cap sync",
      "npx icon-gen --input public/icon.svg --output public --favicon --favicon-png-sizes 1024",
      "yarn @capacitor/assets generate --assetPath public --iconBackgroundColor '#eeeeee' --iconBackgroundColorDark '#191919' --splashBackgroundColor '#eeeeee' --splashBackgroundColorDark '#191919'"
    ],
    "scripts": {
      "dev": "npx cap open android & npx cap open ios & npx cap open @capacitor-community/tauri & npx cap open @capacitor-community/electron"
    }
  },
  "api": {
    "dependencies": ["axios", "swr"]
  },
  "mdx": {
    "dependencies": [
      "@next/mdx",
      "@mdx-js/loader",
      "@mdx-js/react",
      "next-mdx-remote",
      "gray-matter",
      "remark-gfm"
    ]
  },
  "three": {
    "dependencies": [
      "@react-three/rapier",
      "@react-three/drei",
      "@react-three/fiber",
      "@react-three/xr",
      "r3f-perf",
      "@types/three",
      "three",
      "three-stdlib"
    ],
    "devDependencies": [],
    "extras?": [
      "@react-three/flex",
      "@react-three/csg",
      "@react-three/postprocessing",
      "three-bvh-csg"
    ]
  },
  "revealjs": {
    "devDependencies": ["decktape"],
    "resources": [{ "src": "docs/quarto/rjs", "dest": "_extensions/rjs" }],
    "scripts": {
      "postbuild": "decktape --size 960x720 .\\output\\index.html .\\output\\index.pdf"
    }
  }
}
